.well
  = bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f|
    = devise_error_messages!

    = f.field_set do
      = f.legend "Sign Up"

      = f.email_field :email
      = f.password_field :password
      = f.password_field :password_confirmation

      = f.actions do
        = f.submit "Sign up"