.well
  = bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal" }) do |f|
    = f.field_set do
      = f.legend "Login"

      = f.email_field :email

      = f.password_field :password do
        - if devise_mapping.recoverable? && controller_name != 'passwords'
          = f.inline_help do
            = link_to "Forgot your password?", new_password_path(resource_name)

      - if devise_mapping.rememberable?
        = f.check_box :remember_me, :label => "Remember Me"

    = f.actions do
      = f.submit "Login"
      - if devise_mapping.registerable? && controller_name != 'registrations'
        &nbsp;or&nbsp;
        = f.link_button("Sign up", signup_path, :class => 'info')