source 'http://rubygems.org'

gem 'rails'
gem 'fitgem'

# Authentication/Authorization Support
gem 'devise'

# Database
gem 'pg'

# Utility
gem 'visual-environments'
gem 'nifty-generators'

# Visualization
gem 'backbone-on-rails'
gem 'haml'
gem 'google-code-prettify-rails'

# API Support
gem 'rabl'

